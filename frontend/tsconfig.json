{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "experimentalDecorators": true, // Enable decorator support.
    "emitDecoratorMetadata": true, // Emit additional metadata for decorators.
    "paths": {
      "@/*": [
        "./*"
      ],
      "@interfaces/*": [
        "app/interfaces/*",
      ],
      "@models/*": [
        "app/database/models/*",
      ],
      "@schemas/*": [
        "app/database/schemas/*",
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}